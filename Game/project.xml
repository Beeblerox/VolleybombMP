<?xml version="1.0" encoding="utf-8"?>
<project>
	
	<meta title="Volleybomb" package="com.sample.volleybombmp" version="1.0.0" company="Company Name" />
	<app main="Main" path="Export" file="Volleybomb" />
	<window background="#000000" fps="60" />
	
	<source path="Source" />
	<source path="../Shared" />
	
	<haxelib name="openfl" />
	<haxelib name="actuate" />
	<haxelib name="thx.color" />
	<haxelib name="nape" />
	<haxelib name="hxsocketio" />
	<haxelib name="simple-peer" />
	
	<dependency path="node_modules/socket.io-client/dist/socket.io.js" />
	<dependency path="Libs/simplepeer.min.js" />
	<define name="standalone" />
	<!--define name="forceRelay" /-->
	<!--define name="localTest" /--> <!-- Don't fetch ICEs & set connection.delay to 0.075 -->
	
	<haxeflag name="-resource" value="LobbyURL.txt@LobbyURL" unless="localTest" />
	<haxeflag name="-resource" value="localhost.txt@LobbyURL" if="localTest" />
	
	<assets path="Assets" />
	
</project>